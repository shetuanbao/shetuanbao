<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/huodong_zong"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/huodong"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#49C4D6">
        <ImageView
            android:id="@+id/school_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/school"/>
        <ImageView
            android:id="@+id/title_bar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dp"
            android:paddingLeft="155.0dip"
            android:paddingRight="150.0dip"
            android:singleLine="true"
            android:src="@mipmap/huodong"/>
        <ImageView
            android:id="@+id/main_search_title_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_weight="0"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:background="@mipmap/find"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/main_search_title_clock"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:visibility="gone"
        android:background="#49C4D6">
        <ImageView
            android:id="@+id/main_search_title_clock_back"
            android:layout_width="14dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/zuo"/>
        <AutoCompleteTextView
            android:id="@+id/title_bar_name_text"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:paddingLeft="35dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/roundsearch"
            android:singleLine="true"
            android:hint="点击这里搜索活动"
            android:textColor="#c0c0c0"
            android:textStyle="bold"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/title_bar_sousuo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="搜索"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:textSize="19sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/title_bar_name_text"
            android:layout_centerVertical="true"
            android:background="@mipmap/search" />

    </RelativeLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="180dip"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </android.support.v4.view.ViewPager>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/viewGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <RelativeLayout
            android:id="@+id/nodate"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nodate_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="71dp"
                android:background="@mipmap/ku"/>

            <TextView
                android:id="@+id/nodate_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/nodate_image"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="亲，未找到需要的活动"
                android:textColor="#FF8C00" />

        </RelativeLayout>
        <ImageView
            android:id="@+id/huodongfenge_image"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#49C4D6"/>

        <ListView
            android:id="@+id/huodong_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#FFFFFF"
            android:divider="@color/blue2"
            android:dividerHeight="1px"
            android:orientation="vertical" >
        </ListView>

        <ImageView
            android:id="@+id/huodongfenge_image_2"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@mipmap/beijing"/>
    </RelativeLayout>

</LinearLayout>