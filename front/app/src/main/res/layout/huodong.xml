<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/huodong_fen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/huodong_tool"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@mipmap/gengduo_modifybiaoti12">              
            <ImageView 
            android:id="@+id/huodong_tool_text2"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/huodongxiangqing"/>
            <TextView
                android:id="@+id/restaurantdetial_tool_text1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_weight="0.6"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="16sp" />
            
            <TextView
                android:id="@+id/restaurial_name_2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="相册"
                android:layout_centerVertical="true"
                android:textSize="16sp" 
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"/>
      </RelativeLayout>
      <ScrollView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
            
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <FrameLayout
	     android:layout_width="match_parent"
         android:layout_height="180dip"
         android:orientation="vertical"> 
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </android.support.v4.view.ViewPager>
    <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout  
            android:id="@+id/viewGroup4"  
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  
            android:layout_marginTop="165dp"
            android:gravity="center_horizontal"  
            android:orientation="horizontal">  
        </LinearLayout>  
    </LinearLayout>  
</FrameLayout>
              <ImageView
                    android:id="@+id/fenge_image_4"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@mipmap/fenge"
                    />
              <LinearLayout
              android:id="@+id/huodong_name"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:orientation="horizontal"
              android:background="#ffffff"
              >
              <TextView
                  android:id="@+id/restaurantdetial_name_2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:layout_gravity="left|center"
                  android:background="@mipmap/touming"
                  android:text="迎新晚会"
                  android:padding="10dp"
                  android:textStyle="bold"
                  android:singleLine="true"
                  android:textColor="#666666"
                  android:textSize="22sp" >
                </TextView>
                 </LinearLayout> 
              <ImageView
                    android:id="@+id/fenge_image"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@mipmap/fenge"
                    />
              <LinearLayout
                  android:id="@+id/huongdong_address"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#ffffff"
                  android:orientation="horizontal">
                  <ImageView
                      android:id="@+id/huongdong_address_1"
                      android:layout_marginLeft="30dp"
                      android:layout_width="20dp"
                      android:layout_height="25dp"
                      android:layout_marginTop="10dp"                           
                      android:padding="10dp"
                      android:background="@mipmap/place"/>
                  <TextView
                      android:id="@+id/huodong_address_2"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp"
                      android:singleLine="true"
                      android:text="校礼堂"
                      android:textColor="#666666"
                      android:textSize="14sp" />
              </LinearLayout>
           <LinearLayout
           android:id="@+id/huodong_time"
 	       android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="#ffffff"
           android:orientation="horizontal"
           >
           <ImageView
                    android:id="@+id/huodong_time_1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:padding="10dp"
                    android:background="@mipmap/time"/>
             <TextView
                    android:id="@+id/huodong_time_2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"                            
                    android:padding="10dp"
                    android:text="2016年5月1日"
                    android:textColor="#666666"
                    android:textSize="14sp"/> 
 	          </LinearLayout> 
 	          <LinearLayout
                  android:id="@+id/huongdong_baoming"
