                  android:layout_height="wrap_content"
                  android:background="#ffffff"
                  android:layout_marginBottom="10dp"
                  android:orientation="horizontal">
                  <ImageView
                      android:id="@+id/huongdong_baoming_1"
                      android:layout_marginLeft="30dp"
                      android:layout_width="20dp"
                      android:layout_height="25dp"
                      android:layout_marginTop="10dp"                           
                      android:padding="10dp"
                      android:background="@mipmap/baoming"/>
                  <TextView
                      android:id="@+id/huodong_baoming_2"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp"
                      android:singleLine="true"
                      android:text="我要报名"
                      android:textColor="#666666"
                      android:textSize="14sp" />
              </LinearLayout>
              <LinearLayout
                  android:id="@+id/huongdong_bubaoming"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#ffffff"
                  android:visibility="gone"
                  android:orientation="horizontal">
                  <ImageView
                      android:id="@+id/huongdong_bubaoming_1"
                      android:layout_marginLeft="30dp"
                      android:layout_width="20dp"
                      android:layout_height="25dp"
                      android:layout_marginTop="10dp"                           
                      android:padding="10dp"
                      android:background="@mipmap/weibaoming"/>
                  <TextView
                      android:id="@+id/huodong_bubaoming_2"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp"
                      android:singleLine="true"
                      android:text="你已报名"
                      android:textColor="#666666"
                      android:textSize="14sp" />
              </LinearLayout>
 	        <ImageView
                    android:id="@+id/fenge_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@mipmap/fenge"
                    /> 
 	        <ImageView
                    android:id="@+id/fenge_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@mipmap/xxx"
                    /> 
              <ImageView
                    android:id="@+id/fenge_image_12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@mipmap/fenge"
                    /> 
 	     <LinearLayout
 	         android:id="@+id/huodong_detail"
 	         android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#ffffff"
             android:orientation="vertical"
             >
             <TextView
                 android:id="@+id/huodong_detail_1"
                 android:layout_width="150dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="25dp"
                 android:layout_gravity="left|center"
                 android:padding="10dp"
                 android:text="活动内容"
                 android:textStyle="bold"
                 android:textColor="#666666"
                 android:textSize="20sp"/>
             <ImageView
                    android:id="@+id/fenge_image_9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"                   
                    android:background="@mipmap/fenge"
                    />
             <TextView
                 android:id="@+id/huodong_detail_2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"  
                 android:textColor="#666666"
                 android:textSize="16sp"  
                 />
 	         </LinearLayout>
 	            <ImageView
                    android:id="@+id/fenge_image_6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@mipmap/fenge"
                    /> 
 	        <ImageView
                    android:id="@+id/fenge_image_7"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@mipmap/xxx"
                    /> 
              <ImageView
                    android:id="@+id/fenge_image_8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@mipmap/fenge"
                    /> 
 	         <LinearLayout
 	             android:id="@+id/huodong_pinglun"
 	             android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="#ffffff"
                 android:orientation="vertical"
                 >
             <TextView
                 android:id="@+id/huodong_pinglun_2"
                 android:layout_width="150dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="25dp"                            
                 android:padding="10dp"
                 android:text="全部评论"
                 android:textStyle="bold"
                 android:textColor="#666666"
                 android:textSize="20sp"/>
             </LinearLayout>
             <ImageView
                    android:id="@+id/fenge_image_5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@mipmap/fenge"
                    />
             <ListView
                android:id="@+id/huodong_pinglun_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:divider="@color/blue2"
                android:dividerHeight="1px" 
                android:background="#FFFFFF"
                android:orientation="vertical" >
              </ListView>
              <ImageView
                    android:id="@+id/fenge_image_15"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@mipmap/fenge"
                    />            
                <LinearLayout
                 android:id="@+id/huodong_pinglun_canjia_2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:focusable="true" 
                 android:focusableInTouchMode="true" 
                 
                 >
               
       <EditText  
        android:id="@+id/in_pinglun"  
        android:layout_width="290dp"  
        android:layout_height="50dp"  
        android:layout_gravity="center"    
        android:background="@drawable/shape"
        android:gravity="center"
        android:padding="20px"  
        android:hint="点击评论"  
        android:inputType="textMultiLine"
        android:singleLine="true" 
        android:layout_marginLeft="10px" 
        android:textColor="#000000"/>  
        <Button 
        android:text="评论"        
        android:id="@+id/send_pinglun" 
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="10px" 
        android:gravity="center"
        android:layout_margin="10px" 
         android:textColor="#000000"
        android:background="@drawable/shape"
        
        />
        
         
              </LinearLayout>
              </LinearLayout>
