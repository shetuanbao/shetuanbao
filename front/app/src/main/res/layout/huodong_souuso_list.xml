<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:gravity="center_vertical|left">
	
    <LinearLayout
          android:id="@+id/list_image_sousuo"
          android:layout_width="140dp"
          android:layout_height="110dp"
          android:layout_marginLeft="3dp"
          android:gravity="top"
          android:orientation="vertical" >
		  <ImageView
	        android:id="@+id/image_sousuo"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
           
     </LinearLayout>
    
    
    <LinearLayout
          android:id="@+id/list_l_sousuo"
          android:layout_width="wrap_content"
          android:layout_height="118dp"
          
          android:layout_marginRight="11dp"
          android:orientation="vertical" >
		  <LinearLayout
          android:id="@+id/list_l_1"
          android:layout_marginTop="26dp"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:layout_marginLeft="30dp"
          android:orientation="vertical" >
		  <TextView
		        android:id="@+id/name_sousuo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:singleLine="true"
				android:ellipsize="end"
				android:textColor="#3366cc"
		        android:textAppearance="?android:attr/textAppearanceLarge" 
		        android:textSize="18sp"/>
           
         </LinearLayout>
          <LinearLayout
          android:id="@+id/list_l_2_sousuo"
          android:layout_width="wrap_content"
          android:layout_height="25dp"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="0dp"
          android:gravity="center_vertical|center_horizontal"
          android:orientation="horizontal" >
		  
		  <TextView
		        android:id="@+id/time_sousuo"
		        android:layout_width="160dp"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="8dp"
		        android:ellipsize="end"
        		android:lines="3"
        		android:singleLine="false"
        		android:textColor="#3366cc"
        		android:textSize="15sp"
		        />
         </LinearLayout>
		  <LinearLayout
          android:id="@+id/list_l_3_sousuo"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:layout_marginLeft="30dp"
          android:layout_marginBottom="10dp"
          android:gravity="center_vertical|center_horizontal"
          android:orientation="horizontal" >
		 
		  <TextView
		        android:id="@+id/didian_sousuo"
		        android:layout_marginLeft="0dp"
		        android:gravity="center"
		        android:singleLine="true"
				android:ellipsize="end"
		        android:layout_width="wrap_content"
		        android:textColor="#3366cc"
		        
		        android:layout_height="wrap_content"/>
           <TextView
		        android:id="@+id/id_sousuo"
		        android:singleLine="true"
				android:ellipsize="end"
		        android:layout_width="wrap_content"
		        android:textColor="#ffffff"
		        android:layout_marginRight="20dp"
		        android:layout_height="wrap_content"/>
         </LinearLayout>
   		 
     </LinearLayout>

 </LinearLayout>