<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/xiangce_juti_biaoti"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@mipmap/gengduo_modifybiaoti12">              
            <ImageView 
            android:id="@+id/xiangce_juti_fanhui"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            />

            <TextView
                android:id="@+id/xiangce_juti_fanhui_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:layout_weight="0.6"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="16sp" />
            <ImageView
            android:id="@+id/xiangce_juti_liebiao"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="130dp"
            android:layout_weight="1"
            android:src="@mipmap/tupianxiamngce" />
      </RelativeLayout>
      <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical" >
      <ImageView
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        ></ImageView>
     <ImageView
         android:id="@+id/xiangcexiugai"
         android:layout_width="fill_parent"
         android:layout_height="200dp"/>
     <ImageView
         android:layout_width="fill_parent"
         android:layout_height="match_parent"/>
     </LinearLayout>
</LinearLayout>
