<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    <LinearLayout
        android:id="@+id/frame_bottomview"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/fengexian1">
        <LinearLayout
            android:id="@+id/frame_bottomview_luntan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/frame_bottomview_luntan_imageview"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/b_shetuan"/>
            <TextView
                android:id="@+id/frame_bottemview_luntan_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社团"
                android:layout_marginTop="2dp"
                android:textColor="#49c4d6"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/frame_bottomview_activity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/frame_bottomview_activity_imageview"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/a_huodong"/>
            <TextView
                android:id="@+id/frame_bottomview_activity_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动"
                android:textSize="12dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/search_bottom_textcolor"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/frame_bottomview_talk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/frame_bottomview_talk_imageview"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/a_shejiao"/>
            <TextView
                android:id="@+id/frame_bottomview_talk_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社交"
                android:textSize="12dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/search_bottom_textcolor"/>

        </LinearLayout>




        <LinearLayout
            android:id="@+id/frame_bottomview_person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/frame_bottomview_person_imageview"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/a_geren"/>
            <TextView
                android:id="@+id/frame_bottomview_person_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人"
                android:textSize="12dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/search_bottom_textcolor"/>


        </LinearLayout>

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/framepager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/frame_bottomview">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
