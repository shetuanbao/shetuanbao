<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Personal.PersonalQrActivity">
    <LinearLayout
        android:id="@+id/erweima"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gengduo_modifybiaoti12"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/erweima_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/more_back"
            android:textColor="#ffffff"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/erweima_biaoti"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_marginRight="63dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:src="@mipmap/erweima"/>
        <TextView
            android:id="@+id/baocun"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="保存"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/erweimazong"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <com.community.shetuanbao.utils.RoundImageView
            android:id="@+id/QR_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/yijianfankui" />
        <TextView
            android:id="@+id/erweima_text"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="30dp"/>
    <ImageView
        android:id="@+id/QR"
        android:layout_width="fill_parent"
        android:layout_height="200dp"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:text="扫一扫我的二维码，互相交流吧！"
        android:textSize="18dp"
        android:gravity="center"></TextView>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"/>
</LinearLayout>